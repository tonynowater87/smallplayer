<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.tonynowater.myu2bwidget.MainActivity">

        <EditText
            android:id="@+id/et_query_u2b_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_query_video_u2b_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查詢影片"/>

        <Button
            android:id="@+id/bt_query_playlist_u2b_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查詢播放清單"/>

        <Button
            android:id="@+id/bt_query_channel_u2b_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查詢頻道"/>

    </LinearLayout>

</layout>