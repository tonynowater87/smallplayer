<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ToolBar Style -->
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--指定SearchView的Style-->
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <!-- SearchView的Style -->
    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <!--SearchView的按鈕-->
        <!--<item name="searchIcon">@android:drawable/ic_btn_speak_now</item>-->
        <!--指定取消的icon-->
        <!--<item name="closeIcon">@android:drawable/ic_menu_sort_by_size</item>-->
        <!--SearchView的整個背景色-->
        <!--<item name="queryBackground">@color/colorAccent</item>-->
        <!--搜尋的提示字-->
        <item name="queryHint">@string/search_view_hint</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:editTextColor">@android:color/darker_gray</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">@dimen/floating_button_size</item>
        <item name="android:layout_height">@dimen/floating_button_size</item>
        <item name="android:layout_margin">@dimen/margin_gap_level_2</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_playlist_add_black_24px</item>
        <item name="android:tint">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="elevation">@dimen/margin_gap_level_3</item>
        <item name="fabSize">normal</item>
        <item name="layout_behavior">com.tonynowater.smallplayer.view.ScrollOffBottomBehavior</item>
    </style>

    <style name="image_media_icon_style_full_screent_activity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="image_media_icon_style_player_fragment">
        <item name="android:layout_width">@dimen/player_fragment_media_button_size</item>
        <item name="android:layout_height">@dimen/player_fragment_media_button_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="progressbar_player_loading_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminateTint">@color/colorFourth</item>
    </style>

</resources>
