<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:style="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_root_activity_full_screen_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <ImageView
            android:id="@+id/imageview_background_activity_full_screen_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:id="@+id/ll_controller_activity_full_screen_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/full_screen_player_activity_seekbar_field_height"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_start_text_activity_full_screen_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="@string/default_start_time"
                    android:textColor="@android:color/darker_gray"
                    tool:text="00:00" />

                <SeekBar
                    android:id="@+id/seekbar_activity_full_screen_player"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_gravity="center"
                    tool:max="100"
                    tool:progress="50"/>

                <TextView
                    android:id="@+id/tv_end_text_activity_full_screen_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    tool:text="03:50" />

            </LinearLayout>

            <fragment
                android:id="@+id/bottom_player_fragment"
                android:name="com.tonynowater.smallplayer.view.PlayerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:minHeight="?android:attr/actionBarSize" />

        </LinearLayout>


    </RelativeLayout>

</layout>
